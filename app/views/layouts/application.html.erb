<!DOCTYPE html>
<html>
<head>
  <title>Kursach</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav role="navigation" class="navbar navbar-default">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
          <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
          </button>
          <%= link_to 'Home', root_path, class: "navbar-brand active" %>
      </div>
      <!-- Collection of nav links and other content for toggling -->
      <div id="navbarCollapse" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
              <li <%= 'class=active' if controller_name == 'medicines' %> ><%= link_to 'Medicine', medicines_path %></li>
              <li <%= 'class=active' if controller_name == 'sales' %> ><%= link_to 'Sales', sales_path %></li>
              <li <%= 'class=active' if controller_name == 'medicine_forms' %>><%= link_to 'Storage', medicine_forms_path %></li>
              <li <%= 'class=active' if action_name == 'sale' %>><%= link_to 'Order for sales', reports_sale_path %></li>
              <li <%= 'class=active' if action_name == 'left_on_storage' %>><%= link_to 'Left on storage', reports_left_on_storage_path %></li>
              <li <%= 'class=active' if action_name == 'histogram' %>><%= link_to 'Month reports', reports_histogram_path %></li>
         </ul>
          <ul class="nav navbar-nav navbar-right">
              <li><a href="#">Login</a></li>
          </ul>
      </div>
  </nav>
  <div class="container">
    <% if notice %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <h4><%= notice %></h4>
      </div>
    <% end %>
    <%= yield %>
  </div>

</body>
</html>
